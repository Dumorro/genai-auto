# Database
POSTGRES_USER=genai
POSTGRES_PASSWORD=genai_secret
POSTGRES_DB=genai_auto
DATABASE_URL=postgresql://genai:genai_secret@localhost:5432/genai_auto

# OpenRouter (Free models available!)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model (free options)
# - meta-llama/llama-3.1-8b-instruct:free
# - google/gemma-2-9b-it:free  
# - mistralai/mistral-7b-instruct:free
# - qwen/qwen-2-7b-instruct:free
LLM_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Embedding Model
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

# ================================
# SECURITY - JWT Authentication
# ================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ACCESS_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# ================================
# PERFORMANCE - Redis Caching
# ================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_ENABLED=true

# ================================
# HUMAN HANDOFF
# ================================
CONFIDENCE_THRESHOLD=0.7
HUMAN_SUPPORT_WEBHOOK=

# ================================
# SECURITY - PII Protection
# ================================
MASK_PII=true

# ================================
# OBSERVABILITY
# ================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LOG_LEVEL=INFO

# Application
API_HOST=0.0.0.0
API_PORT=8000

# ================================
# OPTIONAL TOOLS
# ================================
# PGAdmin (run with: docker-compose --profile tools up)
PGADMIN_EMAIL=admin@genai.local
PGADMIN_PASSWORD=admin

# Scheduler API (external integration)
SCHEDULER_API_URL=http://localhost:9000
SCHEDULER_API_KEY=
