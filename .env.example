# Database
POSTGRES_USER=genai
POSTGRES_PASSWORD=genai_secret
POSTGRES_DB=genai_auto
DATABASE_URL=postgresql://genai:genai_secret@localhost:5432/genai_auto

# OpenRouter (Free models available!)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model (free options)
# - meta-llama/llama-3.1-8b-instruct:free
# - google/gemma-2-9b-it:free
# - mistralai/mistral-7b-instruct:free
# - qwen/qwen-2-7b-instruct:free
LLM_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Embedding Model
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5

# LangChain (optional - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=

# Application
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# PGAdmin (optional)
PGADMIN_EMAIL=admin@genai.local
PGADMIN_PASSWORD=admin

# Scheduler API (external integration)
SCHEDULER_API_URL=http://localhost:9000
SCHEDULER_API_KEY=
